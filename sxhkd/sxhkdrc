#
# wm independent hotkeys
#

# terminal emulator
super + Return
	kitty --config ~/.config/kitty/tokyonight.conf

# Program launcher
super + space
    rofi -theme ~/.config/rofi/tokyonight.rasi -show drun -no-lazy-grab


# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

#
# bspwm hotkeys
#

# quit/restart bspwm
super + ctrl + {q,r}
	bspc {quit,wm -r}

# close and kill
alt + {q,k}
	bspc node -{c,k}

# send the newest marked node to the newest preselected node
super + y
	bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest window
super + g
	bspc node -s biggest.window

#
# state/flags
#

# set the window state
super + {t,shift + t,f,shift+f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {b,x,y,z}
	bspc node -g {marked,locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift} + {Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}

# focus the next/previous window in the current desktop
super + bracket{left,right}
	bspc node -f {next,prev}.local.!hidden.window

# focus the next/previous desktop in the current monitor
#super + bracket{left,right}
	#bspc desktop -f {prev,next}.local

# select open windows using rofi
super + Tab
	rofi -theme ~/.config/rofi/tokyonight.rasi -show window

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

#
# preselect
#

# preselect the direction
super + ctrl + {Left,Down,Up,Right}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel
	
# Move current window to a pre-selected space
super + ctrl + m
    bspc node -n last.!automatic


#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {Left,Down,Up,Right}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {Left,Down,Up,Right}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + w + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

#
#pointerbindings
#

#move the window under pointer
#pointer_modifier + button1

# Rotate tree
super + r
	bspc node @/ -C forward

# Raise volume
XF86AudioRaiseVolume
    settings_control.sh volume_up

# Lower volume
XF86AudioLowerVolume
	settings_control.sh volume_down
 
# Mute
XF86AudioMute
	settings_control.sh volume_mute
  
# brightness
XF86MonBrightnessUp
	settings_control.sh brightness_up

XF86MonBrightnessDown
	settings_control.sh brightness_down

#show powermenu
super + p
	rofi -show powermenu -theme ~/.config/rofi/tokyonight.rasi

# lock screen
alt + l
   screenlock.sh

super + s
	  ~/.config/rofi/scripts/smart-search

super + shift + w
    ~/.config/rofi/scripts/WallSelect.sh
#screenshot
Print
    /usr/local/bin/screenshot.sh --now
super + Print
	  /usr/local/bin/screenshot.sh --sel
super + ctrl + Print
	  /usr/local/bin/screenshot.sh --stop

# Music summon
super + m
	  ~/.config/bspwm/music_summon.sh

# notification history
alt + n
	  rofi -show message -modi 'message:~/.config/rofi/scripts/rofier.py' -theme ~/.config/rofi/horizon.rasi -eh 2

# emacs extensions
super + x
      ~/.config/emacs/bin/org-capture
